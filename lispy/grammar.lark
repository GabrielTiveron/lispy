?start : atom+

?value : SYMBOL 
			 | STRING 
			 | INT	->number 
			 | FLOAT -> number

?atom	 : "(" atom+ ")"
			 | expr

?expr  : SYMBOL expr expr -> binop
			 | value

// Terminais
SYMBOL.0  : /[-!+\/*@$%^&~<>?|\\\w=]+/
STRING    : /"[^"\\]*(\\[^\n\t\r\f][^"\\]*)*"/
INT.1     : /-?\d+/
FLOAT.2   : /-?\d+\.\d+/

%ignore /\s+/
%ignore /;[^\n]*/
